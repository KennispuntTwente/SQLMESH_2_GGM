# dlt secrets - connection credentials
# See: https://dlthub.com/docs/general-usage/credentials/setup
#
# ============================================================================
# IMPORTANT: dlt does NOT support ${VAR} substitution in TOML files!
# ============================================================================
# dlt reads secrets in this order:
#   1. Environment variables (SECTION__KEY format with double underscore)
#   2. secrets.toml file (this file)
#   3. Vaults (Google Secrets, Airflow Variables, etc.)
#
# For production, use environment variables:
#   SOURCES__SQL_DATABASE__CREDENTIALS="oracle+oracledb://user:pass@host:port/?service_name=name"
#   DESTINATION__POSTGRES__CREDENTIALS="postgresql://user:pass@host:port/database"
#
# For local development, copy this to secrets.toml and fill in actual values.
# ============================================================================

# ============================================================================
# Oracle Source Configuration
# ============================================================================
# The oracledb driver works in "Thin Mode" by default (pure Python, no Oracle Client needed).
# For Thick Mode features (Advanced Security, Kerberos, etc.), see source_to_raw.py.

[sources.sql_database]
# Fill in actual credentials for local development:
credentials = "oracle+oracledb://system:ggm_dev_123@localhost:1521/?service_name=FREEPDB1"

# Alternative connection string formats:
# Using TNS alias (requires TNS_ADMIN env var pointing to tnsnames.ora directory):
#   credentials = "oracle+oracledb://user:password@tns_alias"
# Using SID instead of service name:
#   credentials = "oracle+oracledb://user:password@host:port/SID"
# Oracle Cloud / Autonomous DB with wallet (set TNS_ADMIN to wallet directory):
#   credentials = "oracle+oracledb://user:password@adb_tns_alias"

[destination.postgres]
credentials = "postgresql://ggm:ggm_dev@localhost:5432/ggm_dev"

[destination.mssql]
# Note: dlt uses pyodbc for MSSQL. The driver name may vary by OS.
credentials = "mssql+pyodbc://sa:GGM_Dev123!@localhost:1433/ggm_dev?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes"

# MySQL via SQLAlchemy destination
# Note: dlt uses 'sqlalchemy' as the destination type for MySQL
[destination.sqlalchemy]
credentials = "mysql://root:ggm_dev@localhost:3306/ggm_dev"

[destination.duckdb]
credentials = "ggm_dev.db"

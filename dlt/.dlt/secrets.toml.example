# dlt secrets - connection credentials
# See: https://dlthub.com/docs/general-usage/credentials/setup
#
# ============================================================================
# IMPORTANT: dlt does NOT support ${VAR} substitution in TOML files!
# ============================================================================
# dlt reads secrets in this order:
#   1. Environment variables (SECTION__KEY format with double underscore)
#   2. secrets.toml file (this file)
#   3. Vaults (Google Secrets, Airflow Variables, etc.)
#
# For production, use environment variables (see .env.example).
# For local development, copy this to secrets.toml and fill in actual values.
# ============================================================================

# ============================================================================
# Oracle Source Configuration
# ============================================================================
# The oracledb driver works in "Thin Mode" by default (pure Python, no Oracle Client needed).
# For Thick Mode features (Advanced Security, Kerberos, etc.), set ORACLE_THICK_MODE=1.

[sources.sql_database.credentials]
host = "localhost"
port = 1521
database = "FREEPDB1"  # service_name
username = "system"
password = "ggm_dev_123"
drivername = "oracle+oracledb"

# Alternative: connection string (overrides above)
# credentials = "oracle+oracledb://system:ggm_dev_123@localhost:1521/?service_name=FREEPDB1"

# ============================================================================
# PostgreSQL Destination
# ============================================================================
[destination.postgres.credentials]
host = "localhost"
port = 5432
database = "ggm_dev"
username = "ggm"
password = "ggm_dev"

# Alternative: connection string
# credentials = "postgresql://ggm:ggm_dev@localhost:5432/ggm_dev"

# ============================================================================
# MSSQL Destination
# ============================================================================
[destination.mssql.credentials]
host = "localhost"
port = 1433
database = "ggm_dev"
username = "sa"
password = "GGM_Dev123!"
# driver = "ODBC Driver 18 for SQL Server"  # Optional - auto-detected

[destination.mssql.credentials.query]
TrustServerCertificate = "yes"
# Encrypt = "yes"
# LongAsMax = "yes"

# ============================================================================
# MySQL Destination (via SQLAlchemy)
# Note: dlt uses 'sqlalchemy' as the destination type for MySQL
# ============================================================================
[destination.sqlalchemy.credentials]
host = "localhost"
port = 3306
database = "ggm_dev"
username = "root"
password = "ggm_dev"
drivername = "mysql+pymysql"

# ============================================================================
# DuckDB Destination
# ============================================================================
[destination.duckdb]
credentials = "ggm_dev.db"

[destination.duckdb]
credentials = "ggm_dev.db"
